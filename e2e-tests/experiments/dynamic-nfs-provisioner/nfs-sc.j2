apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: "{{ nfs_sc_name }}"
  annotations:
    openebs.io/cas-type: nfsrwx
    cas.openebs.io/config: |
      - name: NFSServerType
        value: "kernel"
      - name: BackendStorageClass
        value: "{{ backend_sc_name }}"
provisioner: openebs.io/nfsrwx
reclaimPolicy: Delete
